{
  "name": "twtr",
  "version": "1.0.0",
  "author": "Kristiyan Todorov",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "lerna run test --since --ignore @twtr/common",
    "start": "lerna run start --stream --ignore @twtr/common",
    "build": "yarn  && lerna bootstrap && lerna run build --ignore @twtr/common --ignore @twtr/browser",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/jest",
      "**/jest/**",
      "**/babel-loader",
      "**/babel-loader/**"
    ]
  },
  "dependencies": {
    "@lerna/filter-options": "^5.4.0",
    "lerna": ""
  },
  "devDependencies": {
    "cypress": "^9.6.0"
  }
}
